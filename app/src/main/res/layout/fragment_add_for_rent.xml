<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".ui.add_for_rent.AddForRentFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:text="THÔNG TIN CHO THUÊ"
        android:textSize="34sp"
        android:textColor="@color/purple_200"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng nhập thông tin"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Địa chỉ: "
            android:textSize="24dp"/>
        <EditText
            android:id="@+id/edt_address"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="8dp"
            android:hint=" VD: 371 Nguyễn Kiệm, phường 3, quận Gò Vấp, TP. HCM"
            android:background="@drawable/bg_edt_data_for_rent"
            android:inputType="text"
            android:textAlignment="viewStart"
            android:maxLines="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Loại: "
            android:textSize="24dp"/>
        <RadioGroup
            android:id="@+id/rg_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_nhatro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Nhà trọ"
                android:textSize="18dp"/>
            <RadioButton
                android:id="@+id/rb_chungcu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="Chung cư"
                android:textSize="18dp"/>
            <RadioButton
                android:id="@+id/rb_canho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="Căn hộ"
                android:textSize="18dp"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Giá thuê: "
            android:textSize="24dp"/>

        <EditText
            android:id="@+id/edt_price"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:hint=" VD: 3000000"
            android:background="@drawable/bg_edt_data_for_rent"
            android:inputType="number"
            android:textAlignment="textEnd"
            android:maxLines="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:text="VNĐ/tháng"
            android:textSize="24dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Khu vực: "
            android:textSize="24dp" />

        <Spinner
            android:id="@+id/sp_area"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Số ĐT: "
            android:textSize="24dp"/>

        <EditText
            android:id="@+id/edt_contact"
            android:layout_width="285dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_edt_data_for_rent"
            android:hint=" VD: 0808127817"
            android:inputType="number"
            android:maxLines="1"
            android:textAlignment="textStart" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Mô tả: "
            android:textSize="24dp"/>

        <EditText
            android:id="@+id/edt_description"
            android:layout_width="290dp"
            android:layout_height="91dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_edt_data_for_rent"
            android:inputType="text"
            android:textAlignment="viewStart" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btn_insert"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="ĐĂNG BÀI"
            android:background="@drawable/bg_search"/>
        <Button
            android:id="@+id/btn_reset"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:text="ĐẶT LẠI"/>

    </LinearLayout>
</LinearLayout>