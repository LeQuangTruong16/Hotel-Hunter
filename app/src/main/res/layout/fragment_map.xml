<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.map.MapFragment">

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_text_autocomplete"
            android:layout_width="373dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="left"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:hint="Enter address..."
            android:drawableLeft="@drawable/ic_baseline_search"
            android:gravity="center_vertical"
            android:background="@drawable/bg_search"
            android:singleLine="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp">

        <Button
            android:id="@+id/btn_hotel_250m"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_search"
            android:text="250m"/>
        <Button
            android:id="@+id/btn_hotel_500m"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_search"
            android:text="500m"/>
        <Button
            android:id="@+id/btn_hotel_1km"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_search"
            android:text="1km"/>
        <Button
            android:id="@+id/btn_hotel_2km"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_search"
            android:text="2km"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="485dp"
        android:layout_marginLeft="250dp"
        >
    <Button

        android:id="@+id/btn_direction"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_directions_24"
        android:text=""/>

    </LinearLayout>
</RelativeLayout>